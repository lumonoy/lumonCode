        <locationX>176</locationX>
        <locationY>323</locationY>
        <assignmentItems>
            <assignToReference>EntitlementVAR.Status</assignToReference>
            <operator>Assign</operator>
            <value>
                <stringValue>Active</stringValue>
            </value>
        </assignmentItems>
        <assignmentItems>
            <assignToReference>EntitlementVAR.AssetId</assignToReference>
