<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>CreatedBy</field>
        <field>Name</field>
        <field>Start</field>
        <field>End</field>
        <field>FSL__Duration_In_Minutes__c</field>
        <field>Type</field>
        <field>CreatedDate</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <type>userHierarchyField</type>
            </approver>
        </assignedApprover>
        <label>Step 1</label>
        <name>Step_1</name>
    </approvalStep>
    <description>This approval process handles the approval of Resource Absence. The Manager needs to approve all absences if they are 4 hours or longer.</description>
    <emailTemplate>Field_Service/Resource_Absence_approval_request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>ResourceAbsence.FSL__Duration_In_Minutes__c</field>
            <operation>greaterOrEqual</operation>
            <value>240</value>
        </criteriaItems>
        <criteriaItems>
            <field>ResourceAbsence.RecordType</field>
            <operation>equals</operation>
            <value>Non Availability</value>
        </criteriaItems>
        <criteriaItems>
            <field>ResourceAbsence.FSL__Approved__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Add_handler_s_name</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notification_of_approval</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Set_Approval_status</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Add_handler_s_name</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Notification_of_rejection</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Indication_to_Installer_that_Approval_has_been_submitted_to_Manager</name>
            <type>Alert</type>
        </action>
    </initialSubmissionActions>
    <label>Absence approval</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>1</processOrder>
    <recordEditability>AdminOrCurrentApprover</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
